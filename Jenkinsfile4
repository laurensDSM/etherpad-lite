pipeline {
    agent any
    environment {
        GITHUB_TOKEN = credentials('github-token')
        IMAGE_NAME = 'etherpad-lite'
        IMAGE_VERSION = '1.0.0'
        DOCKER_CONTENT_TRUST_REPOSITORY_PASSPHRASE = credentials('dct-repo-passphrase')
        DOCKER_CONTENT_TRUST_ROOT_PASSPHRASE = credentials('dct-root-passphrase')
    }

    stages {
        // stage('Initialize Docker Content Trust') {
        //     steps {
        //         script {
        //             sh "docker trust key generate etherpad"
        //         }
        //     }
        // }

        stage('Build Image') {
            steps {
                sh "docker build -t $IMAGE_NAME:$IMAGE_VERSION ."
            }
        }

        stage('Login to GHCR') {
            steps {
                sh 'echo $GITHUB_TOKEN_PSW | docker login ghcr.io -u $GITHUB_TOKEN_USR --password-stdin'
            }
        }

        stage('Tag Image') {
            steps {
                sh "docker tag $IMAGE_NAME:$IMAGE_VERSION ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
            }
        }

        stage('Push Image') {
            steps {
                sh "docker push ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
            }
        }

        stage('Sign Docker Image with Notary') {
            steps {
                script {
                    // Onderteken het Docker-image met Docker Content Trust (DCT)
                    sh "docker trust sign ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
