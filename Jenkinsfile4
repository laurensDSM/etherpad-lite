pipeline {
    agent any
    environment {
        GITHUB_TOKEN=credentials('github-token')
        IMAGE_NAME='etherpad-lite'
        IMAGE_VERSION="1.0.0"
        NOTARY_SIGNER=credentials('notary-key')
    }
    
    stages {
        stage('build image') {
            steps{
                sh "docker build -t $IMAGE_NAME:$IMAGE_VERSION ."
            }
        }
        stage('login to GHCR') {
            steps{
                sh 'echo $GITHUB_TOKEN_PSW | docker login ghcr.io -u $GITHUB_TOKEN_USR --password-stdin'
            }
        }
        stage('tag image') {
            steps{
                sh 'docker tag $IMAGE_NAME:$IMAGE_VERSION ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION'
            }
        }
        stage('push image') {
            steps{
                sh 'docker push ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION'
            }
        }
        stage('Sign Docker Image with Notary') {
            steps {
                script {
                    // Onderteken het Docker-image met Notary
                    sh "notary -s https://ghcr.io sign ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
                }
            }
        }
        stage('Verify Docker Image with Notary') {
            steps {
                script {
                    // Verifieer het Docker-image met Notary
                    sh "notary -s https://ghcr.io verify ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
