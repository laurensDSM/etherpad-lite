pipeline {
    agent any
    environment {
        GITHUB_TOKEN = credentials('github-token')
        IMAGE_NAME = 'etherpad-lite'
        IMAGE_VERSION = '2.0.0'
    }

    stages {
        // stage('Initialize Docker Content Trust') {
        //     steps {
        //         script {
        //             sh "docker trust key generate etherpad"
        //         }
        //     }
        // }

        stage('Build Image') {
            steps {
                sh "docker build -t $IMAGE_NAME:$IMAGE_VERSION ."
            }
        }

        stage('Login to GHCR') {
            steps {
                sh 'echo $GITHUB_TOKEN_PSW | docker login ghcr.io -u $GITHUB_TOKEN_USR --password-stdin'
            }
        }

        stage('Tag Image') {
            steps {
                sh "docker tag $IMAGE_NAME:$IMAGE_VERSION ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
            }
        }

        stage('Push Image') {
            steps {
                sh "docker push ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION"
            }
        }
        
        stage ('Notation Login') {
            steps {
                sh 'echo $GITHUB_TOKEN_PSW | notation login ghcr.io -u $GITHUB_TOKEN_USR --password-stdin'
            }
        }

        stage ('Image Signing') {
            steps {
                sh 'notation cert generate-test --default "etherpad.org"'
                sh 'notation sign ghcr.io/laurensdsm/$IMAGE_NAME:$IMAGE_VERSION'
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
